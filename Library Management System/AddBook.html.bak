  <div id="div1">
  <form>
  <table>
   <tr>
   <td><label>BookTitle</label></td>
   <td><input class="input" placeholder="Enter Book Title"></input></td>
   </tr>

   <tr>
   <td><label>BookAuthor</label></td>
   <td><input class="input" placeholder="Enter BookAuthor"></input></td>
   </tr>

   <tr>
   <td><label>Edition</label></td>
   <td><input class="input" placeholder="Enter Edition"></input></td>
   </tr>

   <tr>
   <td><label>Book Price</label></td>
   <td><input class="input" placeholder="Enter Book Price"></input></td>
   </tr>

   <tr>
   <td><label>Book Type</label></td>
   <td>
		<select id="dropdown">
		<option >--select--</option>
		<option >Btech</option>
		<option >Degree</option>
		<option >Pharmacy</option>
       </select>
   </td>
   </tr>
   
   <tr>
   <td>
   <td><center><input id="submit" type="submit" value="Add Details"></input></center></td>
   </tr>
  </form>
  </table>
  </div>
  </div>
